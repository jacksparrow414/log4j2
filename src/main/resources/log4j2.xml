<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%t] %level %logger - %msg%n"/>
        </Console>
<!--   参考链接     https://stackoverflow.com/questions/35054870/how-do-i-conditionally-add-log4j2-appender-depending-on-java-system-property-->
<!--   官方文档 Scripts https://logging.apache.org/log4j/2.x/manual/configuration.html-->
        <ScriptAppenderSelector name="SelectIt">
            <Script language="JavaScript"><![CDATA[
        java.lang.System.getProperty("os.name").search("Windows") > -1 ? "RollingFile" : "Null";]]>
            </Script>
            <AppenderSet>
                <RollingFile name="MyFile" fileName="logs/app.log" immediateFlush="true"
                             filePattern="logs/${date:yyyy-MM-dd}/app-%d{yyyy-MM-dd}-%i.log.gz">
                    <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
                    <JsonTemplateLayout eventTemplateUri="classpath:EcsLayout.json"/>
                    <Policies>
                        <TimeBasedTriggeringPolicy/>
                        <SizeBasedTriggeringPolicy size = "10KB"/>
                    </Policies>
                    <DefaultRolloverStrategy fileIndex="nomax"/>
                </RollingFile>
                <Console name="Console" target="SYSTEM_OUT">
                    <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%t] %level %logger - %msg%n"/>
                </Console>
                <Null name="Null" />
            </AppenderSet>
        </ScriptAppenderSelector>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="SelectIt"/>
        </Root>
        <Logger name="com.example.log4j2.controller" level="debug" >
            <AppenderRef ref="SelectIt"/>
        </Logger>
    </Loggers>
</Configuration>